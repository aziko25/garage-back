generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Owner {
  ADMIN
  INVESTOR
  PARTNER
}

enum Status {
  PLEDGE
  PAID
  DUTY
  IN_PROCESS
}

enum PaymentType {
  CASH
  CARD
}

model Car {
  id        Int     @id @default(autoincrement())
  model     String
  carNumber String
  run       String
  owner     Owner
  isActive  Boolean @default(true)
  Rent      Rent[]
}

model Rent {
  id                  Int               @id @default(autoincrement())
  name                String
  phoneNumber         String
  startDate           DateTime
  endDate             DateTime
  status              Status
  guaranteeAmount     Int
  guaranteeType       PaymentType
  amount              Int
  paymentType         PaymentType
  incomePersentage    Int[]
  adminIncome         Int
  investorIncome      Int
  partnerIncome       Int
  isGuaranteeReturned Boolean?          @default(false)
  isRentExtended      Boolean?          @default(false)
  Car                 Car               @relation(fields: [carId], references: [id])
  carId               Int
  Rent_Extensions     Rent_Extensions[]
}

model Rent_Extensions {
  id                   Int         @id @default(autoincrement())
  createdAt           DateTime     @default(now())
  Rent                 Rent        @relation(fields: [rentId], references: [id])
  rentId               Int
  extendedDaysQuantity Int
  status               Status
  amount               Int
  paymentType          PaymentType
}

model Income {
  id        Int      @id @default(autoincrement())
  owner     Owner
  comment   String
  amount    Int
  createdAt DateTime @default(now())
}

model Outcome {
  id        Int      @id @default(autoincrement())
  owner     Owner
  comment   String
  amount    Int
  createdAt DateTime @default(now())
}
